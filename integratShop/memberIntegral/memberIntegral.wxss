.balanceBox {
  width: 100%;
  height: 342rpx;
  background-image: linear-gradient(0deg, #de2038 0%, #db384c 87%);
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-family: PingFangSC-Semibold;
  color: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  letter-spacing: 0;
}

.balanceBox view:nth-child(2) {
  font-family: PingFangSC-Regular;
  font-size: 100rpx;
  line-height: 140rpx;
}

.balanceBox view:last-child {
  width: 170rpx;
  height: 50rpx;
  margin: 0 auto;
  line-height: 50rpx;
  box-sizing: border-box;
  border: 1px solid #fff;
  border-radius: 10px;
}

.content {
  width: 730rpx;
  margin: 0 auto;
  background: #fff;
  margin-top: -15rpx;
  background: #fff;
  box-shadow: 0 -2px 0 0 #f5f5f5;
  border-radius: 15px;
  padding: 20rpx;
  box-sizing: border-box;
}

.title {
  height: 85rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  line-height: 37rpx;
  color: #9d9d9d;
  letter-spacing: 0;
  background: #fff;
  box-shadow: 0 2px 0 0 #efefef;
  margin-bottom: 48rpx;
}

.title > view {
  height: 100%;
  padding: 24rpx 0;
  box-sizing: border-box;
}

.order {
  color: #db384c;
  border-bottom: 4rpx solid #db384c;
}

.conText {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #000;
  letter-spacing: 0;
  text-align: center;
  margin-bottom: 45rpx;
}

.regulation {
  width: 690rpx;
  height: 556rpx;
  background: #f8f8f8;
  border: 2rpx solid #f3f3f3;
  border-radius: 10px;
  position: relative;
}

.regulation .top {
  width: 330rpx;
  height: 72rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 72rpx;
  background: #fff;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.04);
  border-radius: 8px;
  position: absolute;
  left: 50%;
  margin-left: -160rpx;
  top: -36rpx;
}

.signIn, .goShop, .appraise {
  display: flex;
  align-items: center;
  margin-left: 80rpx;
  margin-top: 107rpx;
}

/* .signIn image {
  width: 54rpx;
  height: 72rpx;
  margin-right: 60rpx;
} */

.signInCon text, .goShopCon text, .appraiseCon text {
  display: block;
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  line-height: 48rpx;
  letter-spacing: 0;
}

.goShop, .appraise {
  margin-top: 45rpx;
}

.signIn image, .goShop image, .appraise image {
  width: 72rpx;
  height: 72rpx;
  margin-right: 42rpx;
}

.signInCon .texts, .goShopCon .texts, .appraiseCon .texts {
  font-size: 28rpx;
  color: #db384c;
}

.detail {
  width: 690rpx;
  height: 128rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  box-shadow: 0 -2px 0 0 #efefef;
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  line-height: 37rpx;
  color: #000;
  letter-spacing: 0;
}

.textCol {
  font-size: 24rpx;
  line-height: 33rpx;
  color: #9b9b9b;
}
