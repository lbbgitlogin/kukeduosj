.hint {
  width: 100%;
  height: 96rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 96rpx;
  padding-left: 23rpx;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0 -2rpx 0 0 #efefef, 0 2rpx 0 0 #efefef;
}

.hint text {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.flex {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0 -2rpx 0 0 #efefef, 0 2rpx 0 0 #efefef;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  line-height: 88rpx;
  color: #000;
}

.flex input {
  text-align: right;
}

.flex > view:first-child {
  font-weight: bold;
}

.scan {
  display: flex;
  flex-flow: nowrap;
  align-items: center;
}

.scan input {
  width: 400rpx;
  /* margin-right: 17rpx; */
}

.scan image {
  width: 30rpx;
  height: 30rpx;
}

.w-product {
  width: 100%;
  background: #fff;
  margin-top: 22rpx;
}

.w-title {
  width: 100%;
  height: 96rpx;
  padding-left: 23rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 96rpx;
  font-weight: bold;
  color: #333;
  box-shadow: 0 -2rpx 0 0 #EFEFEF, 0 2rpx 0 0 #EFEFEF;
}

.product {
  width: 728rpx;
  box-sizing: border-box;
  padding-top: 19rpx;
  padding-bottom: 31rpx;
  padding-right: 58rpx;
  padding-left: 22rpx;
  display: flex;
  /* align-items: center; */
  box-shadow: 0 2px 0 0 #efefef;
}

.product-img image {
  width: 144rpx;
  height: 144rpx;
}

.product-info {
  margin-left: 10rpx;
  width: 100%;
  position: relative;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 7rpx;
  color: #000;
  
}

.product-specification {
  font-size: 24rpx;
  color: #9b9b9b;
  margin-bottom: 24rpx;
}

.product-num {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #9b9b9b;
  position: absolute;
  left: 0;
  bottom: 0;
}

.product-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #e20505;
}


.d-btn {
  width: 100%;
  position: fixed;
  bottom: 0;
}

.d-btn button {
  height: 120rpx;
  background: #db384c;
  border-radius: 0;
  font-size: 28rpx;
  line-height: 120rpx;
  color: #fff;
}
